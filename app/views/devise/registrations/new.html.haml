.sign-up-page
  .sign-up-page__title
    %p.sign-up-page__title--text
      新規会員登録
  .sign-up-page__form
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      .sign-up-page__form__email
        =f.label :email,"メールアドレス",class:"sign-up-page__form__email--label"
        =f.email_field :email,class:"sign-up-page__form__email--input"
      .sign-up-page__form__password
        =f.label :password,"パスワード",class:"sign-up-page__form__password--label"
        =f.password_field :password,class:"sign-up-page__form__password--input"
      .sign-up-page__form__password_confirmation
        =f.label :password_confirmation,"パスワード(確認)",class:"sign-up-page__form__password_confirmation--label"
        =f.password_field :password_confirmation,class:"sign-up-page__form__password_confirmation--input"
        .sign-up-page__form__nickname
        =f.label :nickname,"ニックネーム",class:"sign-up-page__form__nickname--label"
        =f.text_field :nickname,class:"sign-up-page__form__nickname--input"
      .sign-up-page__form__submit
        = f.submit "登録",class:"sign-up-page__form__submit--button"














